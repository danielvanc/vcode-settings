{
  "git.promptToSaveFilesBeforeCommit": "always",

  "gitlens.keymap": "chorded",

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "twig": "html",
    "less": "less",
    "SCSS": "scss",
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  "files.associations": {
    "*.html": "twig",
    "*.js": "javascriptreact"
  },

  "git.autofetch": true,

  "[html-twig]": {
    "editor.tabSize": 2
  },

  "eslint.alwaysShowStatus": true,

  "carbon.theme": "dracula",

  "window.title": "${rootName}${separator}${activeEditorLong}",
  "php.validate.executablePath": "/usr/bin/php",

  "terminal.integrated.fontSize": 15,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "'Dank Mono',FiraFlott,Inconsolata-g for Powerline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.copyOnSelection": true,

  "editor.multiCursorModifier": "alt",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'Dank Mono', 'JetBrains Mono', 'Fira Code', Hack,Hasklig, Inconsolata, monospace",
  "editor.fontSize": 19,
  "editor.fontLigatures": true,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "editor.rulers": [70],

  "workbench.colorTheme": "Palenight (Mild Contrast)",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.openMode": "doubleClick",

  "workbench.colorCustomizations": {
    "statusBar.foreground": "#dedede",
    "terminal.border": "#434976",
    "editorRuler.foreground": "#202433"
  },
  "todohighlight.isEnable": true,

  "breadcrumbs.enabled": true,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,

  "window.zoomLevel": 0,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "terminal.integrated.lineHeight": 0,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.experimentalLinkProvider": false,
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.enableBell": true,
  "workbench.fontAliasing": "antialiased",
  "debug.console.fontFamily": "'Dank Mono'",
  "debug.console.fontSize": 16,
  "workbench.sideBar.location": "left",
  "projectManager.git.baseFolders": ["/Applications/MAMP/htdocs"],
  "python.languageServer": "Microsoft",
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "workbench.editorAssociations": [],
  "workbench.activityBar.visible": true,
  "eslint.lintTask.enable": true,
  "editor.accessibilitySupport": "off",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  "editor.cursorSmoothCaretAnimation": true,
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "terminal.integrated.serverSpawn": false
  // "editor.semanticHighlighting.enabled": false
}
