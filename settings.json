{
  "git.promptToSaveFilesBeforeCommit": "always",

  "gitlens.keymap": "chorded",

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "twig": "html",
    "less": "less",
    "SCSS": "scss",
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  "files.associations": {
    "*.html": "twig",
    "*.js": "javascriptreact"
  },

  "git.autofetch": true,

  "[html-twig]": {
    "editor.tabSize": 2
  },

  "eslint.alwaysShowStatus": true,

  "carbon.theme": "dracula",

  "window.title": "${rootName}${separator}${activeEditorLong}",
  "php.validate.executablePath": "/usr/bin/php",

  "terminal.integrated.fontSize": 15,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "'Dank Mono',FiraFlott,Inconsolata-g for Powerline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.copyOnSelection": true,

  "editor.multiCursorModifier": "alt",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'Dank Mono', 'JetBrains Mono', 'Fira Code', Hack,Hasklig, Inconsolata, monospace",
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "workbench.iconTheme": "helium-icon-theme",

  // "material-icon-theme.folders.color": "#8695b7",
  // "material-icon-theme.folders.theme": "specific",
  // "material-icon-theme.hidesExplorerArrows": true,

  "workbench.list.openMode": "doubleClick",

  "workbench.colorCustomizations": {
    "terminal.border": "#434976"
  },
  "todohighlight.isEnable": true,
  "todo-tree.tree.showScanModeButton": false,

  "breadcrumbs.enabled": true,
  "editor.tabSize": 2,
  "editor.minimap.enabled": true,

  "window.zoomLevel": 0,
  "jest.showCoverageOnLoad": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "terminal.integrated.lineHeight": 0,
  // "vscode_custom_css.imports": ["file:///Users/danvancuylenburg/vscodestyles/moonlight.css"],
  // "vscode_custom_css.policy": true,
  "workbench.panel.defaultLocation": "right",
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.enableBell": true,
  "workbench.fontAliasing": "antialiased",
  "debug.console.fontFamily": "'Dank Mono'",
  "debug.console.fontSize": 16,
  "workbench.sideBar.location": "left",
  "projectManager.git.baseFolders": [
    "/Applications/MAMP/htdocs"
  ],
  "python.languageServer": "Microsoft",
  "editor.formatOnSaveMode": "modifications",
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "workbench.colorTheme": "Tokyo City",
  "workbench.activityBar.visible": true
}
